@model IEnumerable<BudgetApp.Models.Transaction>

@foreach (var item in Model)
{
	<table class="table table-bordered table-responsive">
		<thead>
			<tr>
				<th>Description</th>
				<th>Bank Account</th>
				<th>Budget</th>
				<th style="text-align: right;">Amount</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@item.Description</td>
				<td>@item.BankAccount.AccountName</td>
				<td>@item.BudgetItem.ItemName</td>
				<td style="text-align: right;">@item.TransactionAmount.ToString("C") &nbsp; <i class="fa fa-check"></i></td>
			</tr>
		</tbody>
	</table>
	<div class="pull-right m-b-20">
		@Ajax.ActionLink("Confirm", "TransactionDelete", "Dashboard", new { id = item.Id }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "transactionAdded", LoadingElementId = "loadingIcon", OnSuccess = "closeDeleteTransactionModal" }, new { @class = "btn w-sm btn-rounded btn-success"})
		<a href="#" type="button" class="btn btn-default waves-effect w-sm btn-rounded" data-dismiss="modal">Cancel</a>
	</div>
}