@model BudgetApp.Models.BudgetStatusViewModel

@foreach (var item in Model.budgetStatusData)
{
	<div class="card-box">
		<div class="row">
			<div class="col-md-7">
				<span class="badge badge-success m-b-5 pull-left">@item.budgetItemsCount &nbsp; Items</span>
				@if (item.budget.BudgetName == "Income")
				{
				<div data-plugin="circliful" class="circliful-chart" data-dimension="180"
					 data-text=@item.budgetPercentageSpent data-info="Budget Deposited" data-width="30" data-fontsize="24"
					 data-percent=@item.budgetPercentSpent data-fgcolor="#71b6f9" data-bgcolor="#ebeff2">
				</div>
				}
				else
				{
				<div data-plugin="circliful" class="circliful-chart" data-dimension="180"
					 data-text=@item.budgetPercentageSpent data-info="Budget Spent" data-width="30" data-fontsize="24"
					 data-percent=@item.budgetPercentSpent data-fgcolor="#71b6f9" data-bgcolor="#ebeff2">
				</div>
				}
			</div>
			<div class="col-md-5">
				<div class="row">
					<h4 class="m-t-0 m-b-10 m-r-15" style="text-align:right; font-weight:500;">@item.budget.BudgetName</h4>
					<h4 class="m-t-0 m-b-0 m-r-10" style="text-align:right">@item.budget.BudgetAmount.ToString("C")</h4>
					<p class="text-muted m-0 m-r-10" style="text-align:right">Budgeted Amount</p>
				</div>
				<div class="row">
					<h4 class="p-t-10 m-b-0 m-r-10" style="text-align: right">@item.budget.BudgetCurrentAmount.ToString("C")</h4>
					<p class="text-muted m-0 m-r-10" style="text-align:right">Current Balance</p>
				</div>
				@if (item.budget.BudgetName != "Income")
				{
				<div class="row">
					<h4 class="p-t-10 m-b-0 m-r-10" style="text-align:right">@item.percentTotalBudget</h4>
					<p class="text-muted m-0 m-r-10" style="text-align:right">of Total Budget</p>
				</div>
				}
			</div>
		</div>
	</div>
}


